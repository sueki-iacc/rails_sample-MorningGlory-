<% @page_title=@article.title %>

<h1><%= @page_title %></h1>

<p><%= link_to "edit", [:edit, :admin, @article] %></p>

<table class="attr">
	<tr>
		<th width="100">title</th>
		<td><%= @article.title %></td>
	</tr>
	<tr>
		<th>main</th>
		<td><%= simple_format(@article.body) %></td>
	</tr>
	<tr>
		<th>posted at:</th>
		<td><%= @article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
	</tr>
	<tr>
		<th>extinct at:</th>
		<td><%= @article.expired_at.try(:strftime, "%Y/%m/%d %H:%M") %></td>
	</tr>
	<tr>
		<th>limited:</th>
		<td><%= @article.member_only? ? "O" : "X" %></td>
	</tr>
</table>
